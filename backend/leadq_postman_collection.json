{
    "info": {
        "_postman_id": "leadq-chatbot-api",
        "name": "LeadQ Chatbot API",
        "description": "Collection for testing LeadQ Chatbot endpoints (FastAPI) with automated tests.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Chat (RAG)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Response time is less than 1000ms\", function () {",
                            "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                            "});",
                            "",
                            "pm.test(\"Response has required fields\", function () {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData).to.have.property(\"response\");",
                            "    pm.expect(jsonData).to.have.property(\"sessionId\");",
                            "    pm.expect(jsonData).to.have.property(\"recommendations\");",
                            "    pm.expect(jsonData.recommendations).to.be.an(\"array\");",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"message\": \"tell me about pricing\",\n  \"sessionId\": \"test-session-1\"\n}"
                },
                "url": {
                    "raw": "http://localhost:5002/chat",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "5002",
                    "path": [
                        "chat"
                    ]
                }
            },
            "response": []
        },
